rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default: deny all access.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // For the "ContactUsInquiries" collection (existing rule):
    match /ContactUsInquiries/{docId} {
      // Allow anyone to create a new document if it contains at least 'zipCode'
      allow create: if request.resource.data.keys().hasAll(['zipCode']);
      
      // Disallow client-side reading, updating, or deleting.
      allow read, update, delete: if false;
    }
    
    // For the "VIGEO Health Careers Website" collection and all subcollections:
    match /VIGEO Health Careers Website/{document=**} {
      // Temporary: Allow all operations for initial setup
      // TODO: After setup, change this to: allow read, write: if request.auth != null;
      allow read, write: if true;
    }
  }
}